<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.alien.ugo.mini_project1.HomeScreen">

    <ImageView
        android:id="@+id/home_background"
        android:src="@drawable/fish"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/title_home"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center">
        <ImageView
            android:id="@+id/home_logo"
            android:src="@drawable/mastheadsmallblack"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <TextView
            android:text="@string/home_name"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:gravity="bottom"
        android:layout_below="@id/title_home"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_marginRight="65dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/camera_button"
                android:src="@drawable/ic_camera_alt_black_48dp"
                android:layout_centerHorizontal="true"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:onClick="openCamera"/>
            <TextView
                android:text="@string/camera_button"
                android:layout_marginTop="7dp"
                android:layout_below="@id/camera_button"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="openCamera"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/gallery_button"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_smartphone_black_48dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:onClick="openGallery"/>

            <TextView
                android:layout_below="@id/gallery_button"
                android:layout_marginTop="7dp"
                android:textColor="@color/black"
                android:text="@string/gallery_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="openGallery"/>
        </RelativeLayout>


    </LinearLayout>
</RelativeLayout>
